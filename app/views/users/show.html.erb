<div class="text-left text-muted"><img src="/images/mybook_icon.png" alt="MyBook" width="auto" height="60"></div>

<div class="row">
  <aside class="col-md-4">
    <div class="user-profile">
      <aside>
        <div class="icon text-center">
          <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
        </div>
        <div class="name text-center">
          <h1><%= @user.name %></h1>
        </div>
      </aside>
      <div class="profile text-center">
        <span>プロフィール</span>
        <p><%= @user.profile %></p>
      </div>
    </div>
    <div>
      <% if current_user == @user %>
        <%= link_to '編集', edit_user_path(@user), class: 'btn btn-info btn-sm  btn-block' %>
      <% end %>
    </div>
    
    <div class="text-center text-muted"><img src="/images/interior_icon.png" alt="NewInterior" width="auto" height="40"></div>
      <%= form_for(@interior) do |f| %>
        <div class="form-group">
          <span>タイトル</span>
          <%= f.text_area :title, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group">
          <span>写真</span>
          <%= f.file_field :photo %>
        </div>
        <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
      <% end %>
  </aside>
    
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Interiors <span class="badge"><%= @count_interiors %></span><% end %></li>
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Scraps <span class="badge"><%= @count_interiors %></span><% end %></li>
    </ul>
      <%= render 'interiors/interiors', interiors: @interiors %>
  </div>
</div>
</div>
    
  