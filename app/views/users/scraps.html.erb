<div class="user-profile">
  <div class="text-left text-muted"><img src="/images/mybook_icon.png" alt="MyBook" width="auto" height="60"></div>
  <div class="icon text-center">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
</div>

<div class="row">
    <aside class="col-md-4">
      <div class="text-center text-muted"><img src="/images/interior_icon.png" alt="NewInterior" width="auto" height="40"></div>
      <%= form_for(@interior) do |f| %>
        <div class="form-group">
          <span>タイトル</span>
          <%= f.text_area :title, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group">
          <%= f.file_field :image %>
        </div>
        <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    
    <div class="col-xs-8">
      <ul class="nav nav-tabs nav-justified">
        <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Microposts <span class="badge"><%= @count_interiors %></span><% end %></li>
        <li class="<%= 'active' if current_page?(scraps_user_path(@user)) %>"><%= link_to scraps_user_path(@user) do %>Scraps <span class="badge"><%= @count_scraps %></span><% end %></li>
      </ul>
      
      <%= render 'interiors/index', interior: @scraps %>
    </div>
</div>
    
  