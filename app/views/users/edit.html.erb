<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <h1>id: <%= @user.id %>のUserプロフィール編集ページ</h1>

      <%= form_for(@user) do |f| %>

      <div class="form-group">
        <%= f.label :name, 'お名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :profile, 'プロフィール' %>
        <%= f.text_field :profile, class: 'form-control' %>
    </div>
    
    <%= f.submit '修正' %>
    <% end %>

    <div>
      <% if current_user == @user %>
        <%= link_to "削除", @user, method: :delete, data: { confirm: "会員登録を削除しますか?" }, class: 'btn btn-danger btn-sm  btn-block' %>
      <% end %>
    </div>
    
    </div>
< /div>
</div>
<li><%= link_to 'MyBookへ戻る', user_path(@user) %></li>
